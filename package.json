{
  "name": "@aws-lite/client",
  "version": "0.14.3",
  "description": "A simple, fast, extensible AWS client",
  "homepage": "https://github.com/architect/aws-lite",
  "repository": {
    "type": "git",
    "url": "https://github.com/architect/aws-lite"
  },
  "bugs": "https://github.com/architect/aws-lite/issues",
  "scripts": {
    "gen": "npm run generate-plugins",
    "generate-plugins": "node scripts/generate-plugins/index.mjs",
    "publish-plugins": "node scripts/publish-plugins.mjs",
    "install:test:plugins": "cross-env-shell test/plugins/install.sh",
    "plugin": "node scripts/version-plugins.mjs",
    "lint": "npm run install:test:plugins && eslint --fix .",
    "test": "npm run lint && npm run gen && npm run coverage && npm run test:plugins",
    "test:precommit": "cross-env PRECOMMIT=true npm run gen && npm run lint",
    "test:integration": "cross-env tape 'test/integration/**/*-test.js' | tap-arc",
    "test:unit": "cross-env tape 'test/unit/**/*-test.js' | tap-arc",
    "test:plugins": "npm run install:test:plugins && cross-env NODE_ENV=testing tape 'test/plugins/**/*-test.js' | tap-arc",
    "test:live": "cross-env tape 'test/live/**/*-test.js' | tap-arc",
    "coverage": "nyc --reporter=lcov --reporter=text npm run test:unit",
    "vendor": "scripts/vendor/vendor.sh"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run test:precommit",
    "pre-push": "npm run test"
  },
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "engines": {
    "node": ">=16"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "aws4": "^1.12.0",
    "ini": "^4.1.1"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@architect/eslint-config": "^2.1.2",
    "@aws-sdk/util-dynamodb": "^3.423.0",
    "@smithy/smithy-client": "^2.1.9",
    "adm-zip": "^0.5.10",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "evil-dns": "^0.2.0",
    "fast-xml-parser": "^4.3.2",
    "mock-tmp": "^0.0.2",
    "nyc": "^15.1.0",
    "semver": "^7.5.4",
    "simple-git-hooks": "^2.9.0",
    "tap-arc": "^1.2.2",
    "tape": "^5.7.0"
  },
  "files": [
    "src"
  ],
  "workspaces": [
    "plugins/apigateway",
    "plugins/apigatewaymanagementapi",
    "plugins/apigatewayv2",
    "plugins/cloudformation",
    "plugins/cloudfront",
    "plugins/cloudwatch-logs",
    "plugins/dynamodb",
    "plugins/lambda",
    "plugins/rds-data",
    "plugins/s3",
    "plugins/sns",
    "plugins/sqs",
    "plugins/ssm"
  ],
  "eslintConfig": {
    "extends": "@architect/eslint-config",
    "rules": {
      "global-require": "off"
    }
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "exclude": [
      "plugins/",
      "test/",
      "src/_vendor/"
    ]
  }
}
